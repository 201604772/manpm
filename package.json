{
  "name": "manpm",
  "description": "Shows the relevant part of NPM module's README file right in your terminal",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "bin": {
    "manpm": "./bin/manpm.js"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint index.js bin/manpm.js",
    "commit": "git-issues && commit-wizard",
    "issues": "git-issues",
    "pkgfiles": "pkgfiles",
    "size": "tarball=\"$(npm pack .)\"; wc -c \"${tarball}\"; tar tvf \"${tarball}\"; rm \"${tarball}\";",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "bin",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/manpm.git"
  },
  "keywords": [
    "man",
    "manual",
    "help",
    "npm",
    "utility",
    "readme",
    "cli"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/manpm/issues"
  },
  "homepage": "https://github.com/bahmutov/manpm#readme",
  "dependencies": {
    "bluebird": "3.0.5",
    "check-more-types": "2.2.0",
    "debug": "2.2.0",
    "get-package-readme": "1.1.0",
    "lazy-ass": "1.1.0",
    "marked": "0.3.5",
    "marked-terminal": "1.6.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm test"
      ],
      "pre-push": [
        "npm run size",
        "npm run pkgfiles"
      ],
      "post-commit": [
        "npm run version"
      ],
      "post-merge": []
    }
  },
  "devDependencies": {
    "eslint": "^1.10.1",
    "git-issues": "1.2.0",
    "pkgfiles": "2.3.0",
    "pre-git": "1.3.1",
    "semantic-release": "^4.3.5"
  }
}
